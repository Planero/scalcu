<script language="JavaScript">
<!-- hide this script from old browsers
function temp(form)
{
  var s = parseFloat(form.DegS.value, 10);
  var p = parseFloat(form.DegP.value, 10);



  var comm = 0;
  var buyave = 0;
  var buy = 0;
  
 
 comm = s*p*0.0025;
 buyave = s * p * 1.00295/s;
 buy = s * p * 1.00295;
  
 


form.DegCOMM.value = comm;
form.DegAVE.value = buyave;
form.DegBUY.value = buy;



}
// done hiding from old browsers -->
</script>




<br />
<form>
<button type="reset" value="Reset">RESET</button><input name="calc" onclick="temp(this.form)" type="BUTTON" value="CALCULATE" />



